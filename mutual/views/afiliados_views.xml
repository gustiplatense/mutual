<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Vista Tree -->
	<record id="view_mutual_afiliado_tree" model="ir.ui.view">
		<field name="name">mutual.afiliado.tree</field>
		<field name="model">mutual.afiliado</field>
		<field name="arch" type="xml">
			<tree string="Afiliados">
				<field name="afiliado"/>
				<field name="nombre"/>
				<field name="dni"/>
				<field name="cuil"/>
				
			</tree>
		</field>
	</record>

	<!-- Vista Form en 3 columnas -->
	<record id="view_mutual_afiliado_form" model="ir.ui.view">
		<field name="name">mutual.afiliado.form</field>
		<field name="model">mutual.afiliado</field>
		<field name="arch" type="xml">
			<form string="Afiliado">
				<sheet>
					<div class="oe_title">
						<field name="nombre" nolabel="1" style="font-size: 24px; width: 100%;"/>
					</div>
					<group>
						<group>
							<field name="afiliado"/>
							<field name="nacioel"/>
							<field name="nacional"/>
							<field name="civil"/>
							<field name="dni"/>
							<field name="cuil"/>
							<field name="movil"/>
							<field name="email"/>
						</group>
						<group>
							<field name="domicilio"/>
							<field name="localidad"/>
							<field name="telefono"/>
							<field name="postal"/>
							<field name="empleador"/>
							<field name="legajo"/>
							<field name="ingreso"/>
						</group>
					</group>
					<group>
						<group>
							<field name="fecha_alta"/>
							<field name="fecha_baja"/>
						</group>
						<group>
							<field name="foto" widget="image" class="oe_avatar"/>
						</group>
					</group>

					<notebook>


						<page string="Familiares">
							<group>
								<button name="action_add_familiar"
										string="Agregar Familiar"
										type="object"
										class="btn-primary"/>
							</group>
							<field name="familiar_ids">
								<list editable="bottom">
									<field name="nombre"/>
									<field name="parentesco"/>
									<field name="dni"/>
									<field name="nacioel"/>
								</list>
							</field>
						</page>

						<page string="Operaciones">
							<group>
								<button name="action_add_operacion"
										string="Agregar Operacion"
										type="object"
										class="btn-primary"/>
							</group>
							<field name="operacion_ids">
								<list editable="bottom">
									<field name="solicitud"/>
									<field name="comercio"/>
									<field name="ingreso"/>
									<field name="estado"/>
									<field name="otorgado"/>
									<field name="cantidad"/>
								</list>
							</field>
						</page>
						<page string="Observaciones">
							<field name="obs"/>
						</page>
					</notebook>
				</sheet>
				<chatter>
					<field name="message_follower_ids" widget="mail_followers"/>
					<field name="activity_ids" widget="mail_activity"/>
					<field name="message_ids" widget="mail_thread"/>
				</chatter>

			</form>
		</field>
	</record>


	<!-- AcciÃ³n -->
	<record id="action_mutual_afiliados" model="ir.actions.act_window">
		<field name="name">Afiliados</field>
		<field name="res_model">mutual.afiliado</field>
		<field name="view_mode">list,form</field>
		<field name="search_view_id" ref="view_mutual_afiliado_search"/>
	</record>
</odoo>