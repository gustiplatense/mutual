<odoo>
	<record id="view_mutual_familiar_tree" model="ir.ui.view">
		<field name="name">mutual.familiar.list</field>
		<field name="model">mutual.familiar</field>
		<field name="arch" type="xml">
			<list string="Familiares">
				<field name="afiliado_id"/>
				<field name="nombre"/>
				<field name="parentesco"/>
			</list>
		</field>
	</record>

	<!-- Vista Form en 3 columnas -->
	<record id="view_mutual_familiar_form" model="ir.ui.view">
		<field name="name">mutual.familiar.form</field>
		<field name="model">mutual.familiar</field>
		<field name="arch" type="xml">
			<form string="Familiar">
				<sheet>
					<group>
						<group>
							<field name="afiliado_id"/>
							<field name="nombre"/>
							<field name="nacioel"/>
							<field name="nacional"/>
							<field name="parentesco"/>
						</group>
						<group>
							<field name="foto" widget="image" class="oe_avatar"/>
							<field name="dni"/>
							<field name="tipo"/>
							<field name="obs"/>
						</group>
					</group>
				</sheet>
				<chatter>
					<field name="message_follower_ids" widget="mail_followers"/>
					<field name="activity_ids" widget="mail_activity"/>
					<field name="message_ids" widget="mail_thread"/>
				</chatter>

			</form>
		</field>
	</record>


	<record id="action_mutual_familiares" model="ir.actions.act_window">
		<field name="name">Familiares</field>
		<field name="res_model">mutual.familiar</field>
		<field name="view_mode">list,form</field>
		<field name="search_view_id" ref="view_mutual_familiar_search" />
		<field name="help" type="html">
			<p>Gestiona los familiares de afiliados</p>
		</field>
	</record>
</odoo>