<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_partner_form_inherit_id_emp" model="ir.ui.view">
		<field name="name">res.partner.form.inherit.id.emp</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="arch" type="xml">
			<!-- Insertar debajo del campo 'name' -->
			<xpath expr="//field[@name='name']" position="after">
				<field name="es_empleador"/>
				<field name="id_empleador"/>
			</xpath>
		</field>
	</record>
</odoo>